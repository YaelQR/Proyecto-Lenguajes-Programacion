<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2567E8"
    tools:context=".MenuGastos">

    <View
        android:id="@+id/cuadroBlanco2"
        android:layout_width="365dp"
        android:layout_height="785dp"
        android:background="@drawable/redondeado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.86" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Logo de la empresa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="97dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-black"
        android:text="Gastos"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/cuadroBlanco2"
        app:layout_constraintTop_toTopOf="@+id/cuadroBlanco2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="42dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="@+id/cuadroBlanco2"
        app:layout_constraintTop_toTopOf="@+id/cuadroBlanco2"
        app:srcCompat="@drawable/gasto" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Historial de gastos"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/cuadroBlanco2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/sortbutton"
        android:layout_width="91dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/redondeado"
        android:backgroundTint="@color/botonFiltro"
        android:text="@string/filtrar"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/cuadroBlanco2"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:text="Monto"
        android:textColor="#858181"
        app:layout_constraintBottom_toTopOf="@+id/listaGastos"
        app:layout_constraintStart_toStartOf="@+id/cuadroBlanco2"
        app:layout_constraintTop_toBottomOf="@+id/sortbutton" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="10dp"
        android:text="Fecha"
        android:textColor="#858181"
        app:layout_constraintBottom_toTopOf="@+id/listaGastos"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginBottom="10dp"
        android:text="Categoria"
        android:textColor="#858181"
        app:layout_constraintBottom_toTopOf="@+id/listaGastos"
        app:layout_constraintStart_toEndOf="@+id/textView6" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaGastos"
        android:layout_width="350dp"
        android:layout_height="28dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="540dp"
        app:layout_constraintBottom_toBottomOf="@+id/cuadroBlanco2"
        app:layout_constraintEnd_toEndOf="@+id/cuadroBlanco2"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/cuadroBlanco2" />

</androidx.constraintlayout.widget.ConstraintLayout>